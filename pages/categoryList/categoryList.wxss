/**index.wxss**/

swiper {height: 320rpx;width: 100%;}
swiper .slide-image {width: 100%;height:320rpx;}

.title {width: 100%;background: #f0f5f8;height: 80rpx;line-height: 80rpx;padding:20rpx;}
.title text {margin-left:20rpx;}
.title icon {display: inline-block;width: 10rpx;height: 30rpx;content: '.';text-indent: -100rpx;background:#fc1b6b;
  margin-left:40rpx;-webkit-border-radius: 10rpx;}
.new-list {width: 100%;overflow: hidden;border-bottom: 2rpx solid #f5f5f5;}
.new-list:last-child {border-bottom: none;}
.news {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx 2%;
  width: 96%;
  background-color: #FFF;
}

.news .new-left {
  width: 70%;
}
.news-title {font-size: 40rpx;padding-bottom: 10rpx;}
.news-con {font-size: 34rpx;}
.news .news-image {width: 30%;border-radius: 5%;overflow: hidden;height: 200rpx;}
.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.news-image navigator, .news-image image{display: block;width: 100%;height: 100%;}