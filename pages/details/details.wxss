@import "/wxParse/wxParse.wxss";
.des-section {
  padding: 40rpx 40rpx 100rpx 40rpx;
  background: #FFF;
  height: 100%;
}
.des-section .news-title{
  margin-bottom: 40rpx;
  font-size: 45rpx;
}
.news-author {
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;
}
.news-author image {width: 100rpx;height: 100rpx;-webkit-border-radius: 50rpx; border-radius: 50rpx;}
.news-top {
  margin-left: 40rpx;
  display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: column;
}
.person-name,.create-time{font-size: 35rpx;line-height: 50rpx;}
.create-time {color: #b1b1b1;}
.new-con {margin-top: 50rpx;line-height: 55rpx;font-size: 35rpx;min-height: 450rpx;padding-bottom: 40rpx;}
.news-opp {text-align: right;}
.commit-area navigator {display: inline-block;margin: 10rpx 20rpx 0 20rpx;}
.commit-area image{width: 48rpx;height: 50rpx;vertical-align: middle;}
.commit-area {
  z-index: 999;
  position: fixed;bottom: 0;left: 0;width: 100%;height: 80rpx;background-color: #FFF;display: -webkit-flex; /* Safari */
  display: flex;
  flex-direction: row;}
.commit-count,.heart-count {font-size: 24rpx;color: #fc1c62;margin: 0 10rpx;vertical-align: text-top;}
.commit-area input {width: 55%;height: 60rpx;line-height:70rpx;overflow: hidden;font-size: 30rpx;padding: 0 20rpx;margin: 10rpx;background-color: #F5f5f5;
border-radius: 40rpx;}
.commit-area button {margin:10rpx 20rpx;
  background-color: #F5F5F5; color: #000;font-size: 28rpx;height: 65rpx;border-radius: 6rpx;}
.hot-area {margin-top: 10rpx;}
.share-area {margin: 10rpx 0 0 20rpx;}
.share-btn {margin: 0 !important;padding: 0;background: rgba(255,255,255,0) !important;border: 1px solid rgba(255,255,233,0)!important;line-height: normal;}
.share-btn:after {border: 1px solid rgba(255,255,233,0)!important;}
.shop-area {
  display:flex;
  flex-direction:row;
  align-items:center;
  padding:30rpx 4%;
  width:92%;
  background-color:#f0f0f0;
  margin-bottom: 40rpx;
}
.shop-area .shop-img {
  width: 40%;
  height: 200rpx;
}
.shop-area navigator,.shop-area .shop-img image {  display: block;width: 100%;height: 100%;}
.shop-area .shop-msg {width: 56%;margin-left: 4%;}
.shop-title {font-size: 30rpx;margin-bottom: 30rpx;line-height: 50rpx;}
.sale-price {color: #cf171f;font-size: 50rpx;margin-right: 10rpx;}
.price {color: #999999;font-size: 28rpx;}
.und {text-decoration:line-through;}
.campaign-area {overflow: hidden;}
.campaign-area .campaign-title {font-size: 80rpx; text-align: center;width: 100%;margin: 20rpx 0;line-height: 145rpx;color: #cf171f;text-decoration: underline;}
.campaign-item {padding: 20rpx 0;}
.btn-area {padding: 20rpx 0;}
.btn-area button {background-color: #cf171f;color: #FFF;border-radius: 10rpx;}
.section-input,textarea{border: 1px solid #DDD;line-height: 35rpx;padding: 20rpx;font-size: 35rpx;width: auto;}
.radio-group label {font-size: 35rpx;}
.data-con {position: relative;}
.data-con-picker {position: absolute;z-index: 9;width: 100%;height: 100%;top:0;left: 0;}
.data-con-picker .picker {width: 100%;height: 100%;display: block;line-height: 90rpx;opacity: 0;}