/**index.wxss**/
swiper {height: 320rpx;width: 100%;}
swiper .slide-image {width: 100%;height:320rpx;}
.hot-news {margin-top: 30rpx; width: 100%;}
.new-index {width: 92%;padding: 30rpx 4%;margin-top: 30rpx;background: #FFF;}
.new-index:first-child {margin-top: 0;}
.hot-img {position: relative; border-top-left-radius: 10rpx;border-top-right-radius: 10rpx;overflow: hidden;}
.hot-img image {width: 100%;max-height: 350rpx;display: block;}
.hot-title {overflow:hidden;text-overflow:ellipsis; font-size:35rpx;width: 88%;background: rgba(255,255,255,0.3);height: 70rpx;line-height: 70rpx;padding:10rpx 6%;position: absolute;bottom: 0;left: 0;color: #FFF;}
.hot-des {color: #2a2a2a;font-size: 30rpx;line-height: 50rpx;padding: 10rpx;}
.index-icon {width: 48rpx;height: 50rpx;vertical-align: middle;display: inline-block!important;}
.index-count {font-size: 24rpx;color: #fc1c62;margin: 0 10rpx;vertical-align: text-top;display: inline-block!important;}