/**index.wxss**/

.header-bg {position: relative;width: 100%;}
.header-bg .cen {position: absolute;left: 50%;top:50%;}
.header-bg-img {width: 100%;display: block;height: 400rpx;}
.header-bg .header-img {width: 150rpx;height: 150rpx;border-radius: 100%;margin-left: -75rpx;margin-top: -150rpx;}
.header-bg .user-name {width: 100%;text-align: center;margin-top: 45rpx;left: 0;}
.menu {width: 100%;display: flex; flex-direction: row;background: #FFF;padding-top: 45rpx;}
.menu .menu-i{width: 33.3%;text-align: center;font-size: 30rpx;line-height: 50rpx;}
.menu-i:after {display: none;content: '.';text-indent: -10000rpx;width: 30rpx;height: 8rpx;background-color: #fc1b6b;margin-left: 46%;border-radius: 5rpx;}
.menu .menu-i.select:after {display: block;}
.list-title {background-color: #ebedf3;color: #2a2a2a;padding: 0 20rpx;line-height: 70rpx;font-size: 30rpx;}
.list-title navigator {float: right;display: inline-block;}

.new-list,.commit-list {width: 100%;overflow: hidden;}
.news {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx 4%;
  width: 92%;
  background-color: #FFF;
  border-bottom: 1px solid #f5f5f5;
}

.news .new-left {
  width: 70%;
}
.news-title {font-size: 34rpx;padding-bottom: 10rpx;font-weight: bold;}
.news-con {font-size: 29rpx;line-height: 45rpx;}
.news .news-image {width: 30%;border-radius: 5%;overflow: hidden;height: 200rpx;}
.news-image navigator,.news-image image {width: 100%;height: 100%;display: block;}
.undata {width: 100%;margin: 40rpx 0;font-size: 35rpx;text-align: center;}
.to-pay {width: auto;height: 50rpx; line-height: 50rpx;font-size: 25rpx;padding: 0 15rpx;display: inline-block;color: #FFF;border-radius: 10rpx;float: right;margin-right: 10rpx;}
.news .right-side {
  width: 66%;
  margin-left: 4%;
}