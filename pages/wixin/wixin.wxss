@import "/wxParse/wxParse.wxss";
/**index.wxss**/

.wx-area {
   margin: 40rpx 10%;
   width: 80%;
  background: #FFF;
  border: 1rpx solid #dbdbdb;
  border-radius: 15rpx;
  min-height: 500rpx;
  text-align: center;
  padding: 20rpx;
}
.wx-area image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}
.wx-area .wx-name,.wx-area .wx-num,.wx-area .wx-copy {display: block;line-height: 60rpx;font-size: 30rpx;}
.wx-desc {display: block;text-align: left;line-height: 60rpx;font-size: 30rpx;margin: 40rpx 0;}